doctype html
html(lang="fr")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1")
        meta(http-equiv="X-UA-Compatible" content="ie=edge")
        title Orinoco | Nos Cameras
        link(rel="stylesheet" href="stylesheets/index.css")
        link(rel="icon" href="/favicon.png" type="image/png")
    body
        .top-header.py-5
            .container.position-relative
                a.d-flex.align-items-center.justify-content-start(href="/index.html")
                    img.position-fixed#navLogo(src="/images/orinoco-logo.png" alt="Logo de Orinoco" width="50")
                    img.position-absolute.top-50.start-50.translate-middle.animate__animated#navText(src="/images/orinoco-text.png" alt="Police de Orinoco" width="160")

        nav.navbar.navbar-light.sticky-top
            .container
                .d-flex#navLinks
                    .nav-item
                        a.nav-link.d-flex.flex-column.align-items-center.reset-a(href="/index.html" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Catalogue")
                            i.fas.fa-book.fa-2x
                            span.nav-span Catalogue
                    .nav-item
                        a.nav-link.reset-a(href="/panier.html" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Panier")
                            .position-relative.d-flex.flex-column.align-items-center
                                i.fas.fa-shopping-basket.fa-2x
                                span.nav-span Panier
                                #cart-nb
                div
                    .nav-item
                        a.nav-link.d-flex.flex-column.align-items-center.reset-a(href="/confirmation.html" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Commandes")
                            i.fas.fa-user.fa-2x
                            span.nav-span Commandes

        main.animate__animated.animate__fadeIn#main
            .container
                #error
                block main

        footer.text-center.text-lg-start.bg-light
            .mt-4.text-center
                a.btn.btn-floating.m-1(href="#!" role="button")
                    i.fab.fa-facebook-f.fa-2x
                a.btn.btn-floating.m-1(href="#!" role="button")
                    i.fab.fa-instagram.fa-2x
                a.btn.btn-floating.m-1(href="#!" role="button")
                    i.fab.fa-twitter.fa-2x
            .text-center.p-3 Orinoco
            
        .modal.fade#modalConfirm(tabindex="-1")
