  "license": "ISC",
  "devDependencies": {
    "concurrently": "^6.2.1",
    "nodemon": "^2.0.12",
    "sass": "^1.39.2"
  },
  "dependencies": {
    "bootstrap": "^5.1.1"
  }
}
