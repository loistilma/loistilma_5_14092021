{
  "name": "orinoco-frontend",
  "version": "1.0.0",
  "description": "",
  "main": "client.js",
  "nodemonConfig": {
    "ext": "html,css,js"
  },
  "scripts": {
    "start": "node client.js",
    "watch": "npm run watch-file & npm run watch-css",
    "watch-file": "nodemon client.js",
    "watch-css": "sass --watch src/sass/index.scss:stylesheets/index.css",
    "dev": "concurrently \"cd server && npm run start\" \"npm run watch\""
  },
